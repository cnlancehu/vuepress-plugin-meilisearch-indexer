{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "ES2023",

    "rootDir": "./src",
    "outDir": "./lib",
  },
  "include": ["./src"]
}
